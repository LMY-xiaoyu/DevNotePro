
{
  "name": "devnote-pro",
  "version": "1.0.0",
  "description": "面向程序员的高性能极简笔记应用",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.344.0",
    "react-simple-code-editor": "^0.13.1",
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^4.5.3",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/prismjs": "^1.26.3"
  },
  "build": {
    "appId": "com.devnote.pro",
    "productName": "DevNotePro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "static/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "static/app.png"
    }
  }
}
